<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Chat_Room_List">

    <ImageView
        android:id="@+id/chat_room_user_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_launcher_foreground">
    </ImageView>
    <TextView
        android:id="@+id/chat_room_user_name"
        android:layout_toRightOf="@+id/chat_room_user_img"
        android:layout_width="match_parent"
        android:text="사용자"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_height="50dp">
    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Chat_Room_RCV"
        android:layout_below="@+id/chat_room_user_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        tools:listitem="@layout/chat_room_item">
    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/log_out_float_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>
</RelativeLayout>